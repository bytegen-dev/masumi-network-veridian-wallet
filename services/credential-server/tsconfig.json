{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "types": ["node"],
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "compileOnSave": false
}
